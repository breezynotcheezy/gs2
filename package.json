{
  "name": "green-seam",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Green Seam: deterministic baseball engine with LLM-assisted canonicalization and EV decisioning.",
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "dev": "pnpm --filter front dev",
    "build": "pnpm --filter front build",
    "start": "pnpm --filter front start",
    "lint": "eslint .",
    "format": "prettier -w .",
    "test": "node --test",
    "vercel-build": "cd front && pnpm install --no-frozen-lockfile && pnpm run build"
  },
  "bin": {
    "gs": "./dist/cli.js"
  },
  "engines": {
    "node": ">=18.17"
  },
  "workspaces": [
    "front"
  ],
  "dependencies": {
    "commander": "^12.1.0",
    "yaml": "^2.5.1"
  },
  "devDependencies": {
    "@types/node": "^22.5.5",
    "eslint": "^9.9.1",
    "prettier": "^3.3.3",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2"
  },
  "pnpm": {
    "overrides": {
      "react": "^19.0.0",
      "react-dom": "^19.0.0"
    }
  }
}
