    "yaml": "^2.5.1"
  },
  "devDependencies": {
    "@types/node": "^22.5.5",
    "eslint": "^9.9.1",
    "prettier": "^3.3.3",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2"
  }
